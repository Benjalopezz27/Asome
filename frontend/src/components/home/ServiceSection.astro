---
import type { Service } from "@/types";
import ServiceCard from "../shared/ServiceCard.astro";
import Badge from "../shared/badge.astro";
import { ChevronDown } from "lucide-react";

interface Props {
  title: string;
  services: Service[];
  badge?: string;
}

const { title, services, badge } = Astro.props;
---

<section class="py-16 md:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center space-y-4 mb-10 text-center">
      <Badge title={badge} />
      <h3
        class="text-3xl md:text-[40px] font-bold dark-gray max-w-3xl mx-auto leading-tight"
      >
        {title}
      </h3>
      <div class="mt-4 secondary-blue animate-bounce">
        <ChevronDown className="size-8 stroke-3" />
      </div>
    </div>

    <div class="space-y-16 md:space-y-24">
      {services?.map((service) => <ServiceCard service={service} />)}
    </div>
  </div>
</section>
