---
import type { Service } from "@/types";
import Tag from "./tag.astro";
import { getImageUrl } from "@/lib/globalData";
interface Props {
  service: Service;
}

const { service } = Astro.props;

const isImageRight = service.imagePosition === "right";

const borderRadiusClass = isImageRight
  ? "lg:rounded-l-3xl lg:rounded-r-none"
  : "lg:rounded-r-3xl lg:rounded-l-none";
---

<div
  class={`flex flex-col lg:flex-row items-center justify-center ${isImageRight ? "" : "lg:flex-row-reverse"}`}
>
  <div class="w-full lg:w-1/2 space-y-8">
    <div
      class={`bg-[#F3F5FB] rounded-t-3xl lg:rounded-t-none p-8 md:px-14 md:py-14 duration-300 ${borderRadiusClass}`}
    >
      <div class="block group">
        <h3 class="text-2xl md:text-[32px] font-bold dark-gray mb-6">
          {service.title}
        </h3>
      </div>

      <div class="flex flex-wrap gap-3">
        <Tag tags={service.tags || []} />
      </div>
    </div>
  </div>

  <div class="w-full lg:w-[45%]">
    <div class="block overflow-hidden rounded-3xl shadow-lg h-[90%]">
      <div
        class="bg-dark-blue w-full h-60 md:h-100 flex items-center justify-center text-white p-2 hover:scale-105 transform transition-transform duration-300"
      >
        <span class="font-bold text-2xl md:text-3xl">{service.title}</span>
      </div>
    </div>
  </div>
</div>
