---
import "../styles/global.css";
import Header from "@/components/common/Header";
import { getNavbarData } from "../lib/globalData";
import Footer from "@/components/common/Footer.astro";
import { getLangFromUrl } from "@/i18n/utils";
import Logo from "@assets/logo.svg";
import { SEO } from "astro-seo";
// 1. Importar el componente y los tipos
import JsonLd from "@/components/seo/JsonLd.astro";
import type {
  WithContext,
  Organization,
  ProfessionalService,
} from "schema-dts";
const lang = getLangFromUrl(Astro.url);
const { menuItems, cta } = await getNavbarData(lang);

const isEnglish = lang === "en";

const defaultTitle = isEnglish
  ? "Asome - Process Automation with Custom Software"
  : "Asome - Automatización de procesos con software a medida";

const defaultDescription = isEnglish
  ? "Asomelab - Process automation with custom software for growing companies."
  : "Asomelab - Automatización de procesos con software a medida para empresas en crecimiento.";

const defaultKeywords = isEnglish
  ? "Home software development agency, web development Services Software custom software development, web applications Services Design UX/UI design, professional web design Services Marketingdigital marketing, SEO Projects web development portfolio, success stories"
  : "Home agencia desarrollo software, desarrollo web Servicios Software desarrollo software a medida, aplicaciones web Servicios Diseño diseño UX/UI, diseño web profesional Servicios Marketingmarketing digital, SEO Proyectos portfolio desarrollo web, casos de éxito";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  noindex?: boolean;
}
const organizationSchema: WithContext<ProfessionalService> = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  name: "Asome (Asomelab)",
  url: Astro.site ? Astro.site.toString() : "https://asomelab.com",
  logo: "https://asomelab.com/logo.png",
  description: isEnglish
    ? "Process automation with custom software for growing companies."
    : "Automatización de procesos con software a medida para empresas en crecimiento.",
  sameAs: [
    "https://www.linkedin.com/company/asomelab",
    "https://www.instagram.com/asomelab",
    // Agrega aquí todas tus redes sociales
  ],
  address: {
    "@type": "PostalAddress",
    addressCountry: "AR",
    addressLocality: "Tucumán",
  },
  priceRange: "$$",
};
const {
  title = defaultTitle,
  description = defaultDescription,
  image = "/og-image-default.png",
  canonical = new URL(
    Astro.url.pathname,
    Astro.site || "https://asome-front-production.up.railway.app"
  ).toString(),
  noindex = false,
} = Astro.props;
const skipToContentText = isEnglish
  ? "Skip to main content"
  : "Saltar al contenido principal";
  const GA_ID = import.meta.env.PUBLIC_GA_ID;
---

<!doctype html>
<html lang={lang}>
  <head>
    <!-- Google Tag Manager -->
    {GA_ID && (
      <>
        <script 
          async 
          src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}
        ></script>
        
        <script is:inline define:vars={{ GA_ID }}>
          window.dataLayer = window.dataLayer || [];
          function gtag() {
            dataLayer.push(arguments);
          }
          gtag('js', new Date());
          gtag('config', GA_ID);
        </script>
      </>
    )}
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <SEO
      title={title}
      description={description}
      canonical={canonical}
      noindex={noindex}
      nofollow={noindex}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: image,
        },
        image: {
          alt: "Asomelab Preview",
        },
        optional: {
          description: description,
          siteName: "Asomelab",
          locale: isEnglish ? "en_US" : "es_AR",
        },
      }}
      extend={{
        meta: [
          {
            name: "keywords",
            content: defaultKeywords,
          },
          { name: "author", content: "Asomelab" },
          { name: "generator", content: Astro.generator },
        ],
        link: [
          { rel: "icon", type: "image/svg+xml", href: Logo.src },
          { rel: "llms-txt", href: "/llms.txt" },
        ],
      }}
    />
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-WFPZB7RR"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-100 focus:px-6 focus:py-3 focus:bg-white focus:text-dark-blue focus:font-bold focus:rounded-md focus:shadow-xl focus:ring-4 focus:ring-blue-300 transition-all"
    >
      {skipToContentText}
    </a>
    <Header client:load menuItems={menuItems} ctaButton={cta} lang={lang} />
    <main role="main" id="main-content">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
  }
</style>
