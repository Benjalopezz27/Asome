---
import "../styles/global.css";
import Header from "@/components/common/Header";
import { getNavbarData } from "../lib/globalData";
import Footer from "@/components/common/Footer.astro";
import { getLangFromUrl } from "@/i18n/utils";
import Logo from "@assets/logo.svg";
const lang = getLangFromUrl(Astro.url);
const { menuItems, cta } = await getNavbarData(lang);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={Logo.src} />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Asomelab - Automatización de procesos con software a medida para empresas en crecimiento. "
    />
    <meta
      name="keywords"
      content="automatización, software a medida, empresas en crecimiento, procesos automatizados"
    />
    <meta name="author" content="Asomelab" />
    <meta name="robots" content="index, follow" />
    <meta
      property="og:title"
      content="Asomelab - Automatización de procesos con software a medida"
    />
    <meta
      property="og:description"
      content="Asomelab - Automatización de procesos con software a medida para empresas en crecimiento. "
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://asomelab.com" />
    <link rel="canonical" href="https://asomelab.com" />
    <title>Asome - Automatización de procesos con software a medida</title>
  </head>
  <body>
    <Header client:load menuItems={menuItems} ctaButton={cta} lang={lang} />

    <slot />

    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
  }
</style>
